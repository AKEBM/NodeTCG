<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modern Form with Dropdown</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <style>
    
    *{
      overflow: hidden;
      background-color: transparent;
    }


    body {
      font-family: 'Poppins', sans-serif;
      background-color: transparent;
      margin: 0;
      padding: 0;
      display: flex;
      
      align-items: center;
      height: 100vh;
      width: 100vw;
      

    }

    .form-container {
      
      width: 95vw;
      display: inline;
      border-radius: 40px;
      background: transparent;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 40px;
      border-radius: 10px;
      height: 95vh;
      transition: transform 0.3s ease;
    }

   

    h2 {
      text-align: center;
      font-weight: 600;
      color: #333;
      margin-bottom: 20px;
    }

    .form-group {
      
      width: 40vw;
      margin-bottom: 20px;
    }

    label {
      display: block;
      
      font-size: 14px;
      color: #666;
      margin-bottom: 8px;
      color: white;
    }

    input[type="text"],
    input[type="email"],
    select,
    textarea {
      background-color: white;
      width: 100%;
      padding: 12px;
      font-size: 14px;
      border: 2px solid #ddd;
      border-radius: 6px;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    select:focus,
    textarea:focus {
      border-color: #4CAF50;
      outline: none;
    }

    /* Styling for the select dropdown */
    select {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background: #fff url('https://upload.wikimedia.org/wikipedia/commons/2/23/Arrow_down_icon.svg') no-repeat right 10px center;
      background-size: 20px;
      cursor: pointer;
    }

    /* Additional style for the text displaying selected option */
    .selected-option {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
      font-style: italic;
    }

    .submit-btn {
      padding: 14px;
      background-color: #4CAF50;
      border: none;
      border-radius: 6px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      width: 40vw;
      margin-bottom: 20px;
    }

    .submit-btn:hover {
      background-color: #45a049;
    }

    .form-footer {
      text-align: center;
      font-size: 12px;
      color: #888;
      margin-top: 20px;
    }

    .form-footer a {
      color: #4CAF50;
      text-decoration: none;
    }

    
  </style>
</head>
<body>

  <div class="form-container">
    <form action="#" method="POST">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
      </div>
      <div class="form-group">
        <label for="subject">Numéro de Single</label>
        <select id="subject" name="subject">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>


        </select>
        <!-- Display selected option below -->
       
      </div>

      <div class="form-group">
        <label for="points">Points attribués</label>
        <select id="points" name="points">

          <option value="2">2</option>

          <option value="5">5</option>
          <option value="10">10</option>
        </select>
        <!-- Display selected option below -->
       
      </div>

      <button type="submit" class="submit-btn">Send Message</button>
    </form>
   
  </div>

  <script>
    // Get the select dropdown element and the div to display the selected option
    const subjectSelect = document.getElementById('subject');
    const subjectSelect2 = document.getElementById('points');


    // Event listener to update the displayed text whenever the user selects a new option
    subjectSelect.addEventListener('change', function() {
      const selectedOption = subjectSelect.options[subjectSelect.selectedIndex].text;
      
    });
    subjectSelect2.addEventListener('change', function() {
      const selectedOption2 = subjectSelect2.options[subjectSelect2.selectedIndex].text;
     
    });
  </script>

</body>
</html>


