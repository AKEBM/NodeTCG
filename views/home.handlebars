<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.00, minimum-scale=1.00, maximum-scale=1.00, user-scalable=no">

</head>



<body>
    <img src="wallpaper.png" alt"" style="width: 120vw; position: absolute; opacity:0" id="wallpaper">

    <div class="main" style="opacity: 0">
        
        <button id="change_view" onmousedown="change_view()" style="background: none;"><img src="/button.png" alt="" style="width: 100%;height: 100%" style=""></button>
            <button id="left" onmousedown="left()" style="background: none;"><img src="/left.png" alt="" style="width: 100%;height: 100%" style=""></button>
        <button id="right" onmousedown="right()" style="background: none;"><img src="/right.png" alt="" style="width: 100%;height: 100%" style=""></button>
        <input type="checkbox" id="switch" /><label id="label1"for="switch">Toggle</label>
        <label id="label" for="check">
        <input type="checkbox" id="check" onclick="anime({targets:document.getElementsByClassName('menu div')[0], opacity: document.getElementById('check').checked+0,translateX: 45*(document.getElementById('check').checked) +'vw', easing: 'cubicBezier(.5, .05, .1, .3)', duration: 400})"/> 
            <span></span>
            <span></span>
            <span></span>
        </label>
        
        
    </div>
    <div class="menu div" style="left: -45vw;">

        <div id="form-wrapper">
            <form action="/p/quote.php" method="GET">
                <h1 id="form-title">Select player</h1>
                <div id="debt-amount-slider">
                    <input type="radio" onclick="player = 1" name="debt-amount" id="1" value="1" required>
                    <label for="1" data-debt-amount="1"></label>
                    <input type="radio" onclick="player = 2" name="debt-amount" id="2" value="2" required>
                    <label for="2" data-debt-amount="2"></label>
                    <input type="radio" onclick="player = 3" name="debt-amount" id="3" value="3" required>
                    <label for="3" data-debt-amount="3"></label>
                    <input type="radio" onclick="player = 4" name="debt-amount" id="4" value="4" required>
                    <label for="4" data-debt-amount="4"></label>
                    <div id="debt-amount-pos"></div>
                </div>
            </form>

        </div>
    </div>
    <div class="loader_div" style="width: 100vw;height:100vh;background-color:white; z-index: 50;position:absolute">
        <div class="loader"></div>
    </div>
    
</body>


<script src="/anime.js"></script>
<script>
    
    
    var player = 0;
    var speed = 0;
    setTimeout(()=>{
            document.getElementsByClassName("main")[0].style.opacity = 0.7; 
            document.getElementById("wallpaper").style.opacity = 1; 
            anime({targets:".loader_div", translateX:"120vw", opacity:0,duration: 4000})
        }, 2000);
    setTimeout(()=>{
            document.getElementsByClassName("loader_div")[0].remove()
        }, 5000);    
</script>


